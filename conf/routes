# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                      controllers.Application.index

# Authentication
GET     /login                                 controllers.Application.login
GET     /fbauth                                controllers.Application.fbauth
GET     /logout                                controllers.Application.logout

#Decision

GET     /decision/create                       controllers.Decisions.create
GET     /decision/:id                          controllers.Decisions.show(id: Long)
GET     /myDecisions/:ownerId                  controllers.Decisions.myDecisions(ownerId: Long)
GET     /myDecisions/                          controllers.Decisions.myDecisionz
POST    /myDecisions/                          controllers.Decisions.myDecisionz
POST    /decision                              controllers.Decisions.submit
GET     /decision/invite/:decisionId           controllers.Decisions.invite(decisionId: Long)
GET     /decisionSummaries                     controllers.Decisions.decisionSummaries

POST    /recordInvitationList                  controllers.Decisions.recordInvitationList

GET     /channel.html                          controllers.Application.facebookChannelFile

GET     /emptyPage                             controllers.Application.emptyPage

GET     /fcpe                                  controllers.Application.fcpe
GET     /boots                                 controllers.Application.boots

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                          controllers.Assets.at(path="/public", file)
# GET     /assets/stylesheets/*file              controllers.Assets.at(path="/target/resource_managed/main/public/stylesheets/", file)

